{
  "name": "tod-m",
  "version": "26.2.7",
  "description": "LAN内で大容量動画ファイルを安全にやりとりするデスクトップアプリケーション",
  "main": "src/main/index.js",
  "author": "Kazuyuki Baba",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kzbb/tod-m.git"
  },
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder",
    "release": "node scripts/build-and-notarize.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@tus/file-store": "^1.3.0",
    "@tus/server": "^1.3.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.4",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "24.12.0",
    "icon-gen": "^5.0.0"
  },
  "build": {
    "appId": "com.kzbb.tod-m",
    "productName": "TOD-M",
    "mac": {
      "icon": "resources/icons/app.icns",
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity": "Developer ID Application"
    },
    "files": [
      "src/**/*",
      "resources/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    }
  }
}
