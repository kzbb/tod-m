{
  "name": "tod-m",
  "version": "0.1.0",
  "description": "LAN内で大容量動画ファイルを安全にやりとりするデスクトップアプリケーション",
  "main": "src/main/index.js",
  "author": "Kazuyuki Baba",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kzbb/tod-m.git"
  },
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder",
    "package:mac": "electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@tus/file-store": "^1.3.0",
    "@tus/server": "^1.3.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "icon-gen": "^5.0.0"
  },
  "build": {
    "appId": "com.kzbb.tod-m",
    "productName": "TOD-M",
    "mac": {
      "icon": "resources/icons/app.icns",
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "src/**/*",
      "resources/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    }
  }
}
